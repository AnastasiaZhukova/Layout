<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="TextAppearance.AppCompat.Body2.DrawerHeader">
        <item name="android:textColor">@color/text_white_primary</item>
    </style>

    <style name="DrawerRowTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/text_black_secondary</item>
        <item name="android:textSize">@dimen/text_size_body_14</item>
    </style>

</resources>
